{
  "manifest_version": 3,
  "name": "Example Extension with Python Backend",
  "version": "1.0",
  "description": "Example showing how to communicate with Python script",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8765/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
