{
  "manifest_version": 3,
  "name": "Note Taker Extension",
  "version": "1.0",
  "description": "A dedicated extension for taking notes on websites.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "assets/icons/fdm128.png",
      "16": "assets/icons/fdm16.png",
      "48": "assets/icons/fdm48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["note_taker.css"],
      "js": ["user_scripts/note_taker.js"]
    }
  ]
}