{
    "manifest_version": 3,
    "name": "Quick Sidebar Bookmarks",
    "version": "1.0",
    "description": "A vertical sidebar for your favorite URLs with auto-fetched icons.",
    "permissions": [
        "sidePanel",
        "storage"
    ],
    "action": {
        "default_title": "Open Side Panel"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}