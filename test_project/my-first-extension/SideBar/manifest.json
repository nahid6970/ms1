{
    "manifest_version": 3,
    "name": "Quick Sidebar Pro",
    "version": "1.0",
    "description": "A slim, customizable sidebar that stays with you.",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_title": "Quick Sidebar Pro",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}